{
  "name": "swtc-transaction",
  "version": "1.3.2",
  "description": "swtc transaction package",
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "unpkg": "dist/swtc-transaction.js",
  "jsdelivr": "dist/swtc-transaction.js",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "clean": "rm -fr esm cjs dist src package-lock.json node_modules",
    "prettier": "prettier",
    "pretty-quick": "pretty-quick",
    "prettier:check": "prettier -c tssrc/*.ts",
    "prettier:tabs": "prettier --use-tabs --write package.json tssrc/*.ts",
    "tsc": "tsc; tsc -p tsconfig.cjs.json; tsc -p tsconfig.esm.json",
    "rollup": "rollup -c",
    "tslint": "tslint tssrc/*.ts",
    "build": "webpack",
    "build:dev": "webpack --mode development",
    "test": "mocha \"test/test*.js\"",
    "test:api": "mocha \"test/api*.js\"",
    "test:extended": "mocha \"test/*.js\"",
    "test:nyc": "nyc --reporter=html --reporter=text mocha test/test*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/swtcca/swtclib.git"
  },
  "keywords": [
    "swtc",
    "jingtum",
    "transaction"
  ],
  "author": "Lospring Liu <lospringliu@gmail.com>",
  "license": "BSD-2-Clause",
  "bugs": {
    "url": "git+https://github.com/swtcca/swtclib.git"
  },
  "homepage": "https://github.com/swtcca/swtclib",
  "dependencies": {
    "bignumber.js": "^9.0.0",
    "swtc-serializer": "^2.2.3",
    "swtc-utils": "^1.3.2",
    "swtc-wallet": "^2.1.1",
    "url": "^0.11.0",
    "utf8": "^3.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.0.1",
    "@rollup/plugin-json": "^4.0.1",
    "@rollup/plugin-node-resolve": "^7.0.0",
    "@rollup/plugin-typescript": "^2.1.0",
    "@types/jest": "^24.9.1",
    "@types/node": "^12.7.1",
    "axios": "^0.19.0",
    "chai": "^4.2.0",
    "chai-json-schema": "^1.5.1",
    "jest": "^25.0.0",
    "mocha": "^6.2.0",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "rollup": "^1.29.1",
    "rollup-plugin-terser": "^5.2.0",
    "ts-jest": "^25.0.0",
    "tslint": "^5.19.0",
    "lru-cache": "^4.0.1",
    "nyc": "^14.1.1",
    "sha1": "^1.1.1",
    "sinon": "^7.4.1",
    "tslint": "^5.19.0",
    "typescript": "^3.4.5",
    "webpack": "^4.29.3",
    "webpack-cli": "^3.2.3"
  }
}
