{
  "name": "swtc-lib",
  "version": "1.6.45",
  "description": "swtc-lib for jingtum blockchain",
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "unpkg": "dist/swtc-lib.js",
  "jsdelivr": "dist/swtc-lib.js",
  "browser": {
    "swtc-tum3": false,
    "tum3-eth-abi": false,
    "ws": "./src/wswrapper.js"
  },
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "clean": "rm -fr esm cjs dist src package-lock.json node_modules",
    "prettier": "prettier",
    "pretty-quick": "pretty-quick",
    "prettier:check": "prettier -c tssrc/*.ts",
    "prettier:tabs": "prettier --use-tabs --write package.json tssrc/*.ts",
    "tsc": "tsc; tsc -p tsconfig.cjs.json; tsc -p tsconfig.esm.json",
    "tslint": "tslint tssrc/*.ts",
    "build:dev": "tsc; webpack --mode development",
    "build": "tsc; webpack",
    "test": "tsc; mocha \"test/test*.js\"",
    "test:api": "tsc; mocha \"test/*.js\"",
    "test:nyc": "nyc --reporter=html --reporter=text mocha test/test*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/swtcca/swtclib.git"
  },
  "keywords": [
    "swtc",
    "jingtum",
    "account",
    "ledger",
    "remote"
  ],
  "author": "Lospring Liu <lospringliu@gmail.com>",
  "license": "BSD-2-Clause",
  "bugs": {
    "url": "git+https://github.com/swtcca/swtclib.git"
  },
  "homepage": "https://github.com/swtcca/swtclib",
  "dependencies": {
    "bignumber.js": "^9.0.0",
    "lru-cache": "^4.0.1",
    "sha1": "^1.1.1",
    "swtc-nativescript": "^1.0.2",
    "swtc-transaction": "^1.3.1",
    "swtc-utils": "^1.3.2",
    "ws": "^6.2.1"
  },
  "devDependencies": {
    "@types/node": "^12.7.1",
    "chai": "^4.2.0",
    "chai-json-schema": "^1.5.1",
    "mocha": "^6.2.0",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "sinon": "^7.4.1",
    "swtc-tum3": "^0.1.2",
    "tslint": "^5.19.0",
    "tum3-eth-abi": "^1.0.2",
    "typescript": "^3.4.5",
    "webpack": "^4.29.3",
    "webpack-cli": "^3.2.3"
  }
}
