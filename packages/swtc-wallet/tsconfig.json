{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "pretty": true,
    "lib": ["es2015"],
    "outDir": "src",
    "rootDir": "tssrc",
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": false,
    "suppressImplicitAnyIndexErrors": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "removeComments": true,
    "baseUrl": "."
  },
  "include": ["tssrc"]
}
