{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2015"],
    "outDir": "lib",
    "rootDir": "src",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "allowJs": true
  },
  "include": ["src/*.js", "src/**/*.ts"]
}