{
  "packages": ["packages/*"],
  "version": "independent",
  "command": {
    "publish": {
      "access": "public",
      "ignoreChanges": ["ignore.file", "*.md"],
      "message": "chore(release): publish"
    },
    "bootstrap": {
      "ignore": "component-*",
      "npmClientArgs": ["--no-package-lock"]
    }
  }
}
